<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/oneLineMeetingLayout">

    <androidx.cardview.widget.CardView
        android:id="@+id/design_main_recyclerview_ImageView"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:cardCornerRadius="45dp"
        android:layout_margin="16dp">

        <ImageView
            android:id="@+id/design_main_recyclerview_imageview_color"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="centerCrop"
            android:src="@color/green" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/design_main_recyclerview_info_reunion"
        android:layout_width="256dp"
        android:layout_height="25dp"
        android:text="RÃ©union A - 14h00 - Peach"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/design_main_recyclerview_ImageView"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/design_main_recyclerview_email_reunion"
        android:layout_width="256dp"
        android:layout_height="20dp"
        android:text="maxime@lamzone.com, alex@lamzo..."
        android:layout_toRightOf="@+id/design_main_recyclerview_ImageView"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="8dp" />

    <ImageButton
        android:id="@+id/design_main_recyclerview_delete_reunion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/design_main_recyclerview_info_reunion"
        android:background="@color/white"
        app:srcCompat="@android:drawable/ic_menu_delete"
        app:tint="@color/black" />

</RelativeLayout>